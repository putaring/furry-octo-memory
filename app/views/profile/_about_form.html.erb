<%= form_for(current_user.profile, url: profile_path, remote: true, data: { user_id: current_user.id }) do |f| %>
  <div class="alert alert-danger edit_errors" style="display:none">
  </div>
  <div class="alert alert-success edit_success" style="display:none">
    Updated. Go to your <%= link_to 'profile', user_path(current_user) %>
  </div>
  <div class="form-group">
    <%= f.label :about, 'Edit your description', class: show_label ? '' : "sr-only" %>
    <%= f.text_area :about, { class: 'form-control', placeholder: 'Tell them about the things you like. Share your favorite travel destinations, books, movies, shows, music, food.', rows: 7} %>
  </div>
  <div class="form-group text-right">
    <%= f.submit 'Update', { data: { disable_with: 'Updatingâ€¦' }, class: 'btn btn-success' } %>
  </div>
<% end %>
