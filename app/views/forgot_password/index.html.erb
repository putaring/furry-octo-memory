<% provide(:title, 'Forgot password') %>

<section class="container">
  <%= render partial: 'shared/gray_nav' %>

  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-7">
      <div class="card p-lg-3 mb-3">
        <div class="card-body">
          <div class="mb-4 text-center">
            <h1 class="h2 mb-4">Reset password</h1>
            <p class="mb-4">
              Enter the email address associated with your Spouzz.com account. We'll email you a link where you can easily create a new password.
            </p>
          </div>

          <div class="row no-gutters justify-content-center">
            <div class="col-lg-8">
              <%= form_tag(forgot_password_path, method: :post) do %>
                <div class="form-group">
                  <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Enter you email address', required: true, autofocus: true %>
                </div>
                <div class="form-group text-center">
                  <%= submit_tag 'Reset password', class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
