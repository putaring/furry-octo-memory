<% provide(:title, 'Forgot password') %>

<section class="container">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 mt-4">
      <%= link_to root_path, class: 'd-block text-center' do %>
        <%= image_tag 'logo.svg', width: 48 %>
      <% end %>
      <h1 class="h2 text-center my-3">Forgot your password?</h1>
      <p>
        Enter the email address associated with your Spouzz.com account. We'll email you a link where you can easily create a new password.
      </p>
      <%= form_tag(forgot_password_path, method: :post) do %>
        <div class="form-group">
          <%= email_field_tag 'email', nil, class: 'form-control form-control-lg', placeholder: 'Enter you email address', required: true, autofocus: true %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Continue âžž', class: 'btn btn-lg btn-block btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
