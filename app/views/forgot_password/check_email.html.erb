<% provide(:title, 'Check your email') %>

<section class="container">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 m-t-2">
      <%= link_to root_path, class: 'd-block text-center' do %>
        <%= image_tag 'logo.svg', width: 48 %>
      <% end %>
      <h1 class="h2 text-center m-y-1">Check your email</h1>
      <p>
        If the email address you entered <strong><%= params[:email].present? ? "(#{params[:email]})" : '' %></strong> is associated with a Roozam account you will receive an email from us with instrcutions to create a new password. If you haven't received this email, please check your junk folder or  try re-sending the instructions.
      </p>
      <p class="lead text-center">
        Didn't receive the email?
      </p>
      <%= form_tag(forgot_password_path, method: :post) do %>
        <div class="form-group">
          <%= hidden_field_tag 'email', params[:email] %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Resend instructions', class: 'btn btn-lg btn-block btn-primary', data: { disable_with: 'Resendingâ€¦' } %>
        </div>
      <% end %>
    </div>
  </div>
</section>
