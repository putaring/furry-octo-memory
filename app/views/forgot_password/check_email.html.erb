<% provide(:title, 'Check your email') %>

<section class="container">
  <%= render partial: 'shared/gray_nav' %>

  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-7">
      <div class="card p-lg-3 mb-3">
        <div class="card-body">
          <div class="text-center">
            <h1 class="h2 mb-4">Check your email</h1>
            <p class="card-text text-left">
              If the email address you entered <strong><%= flash[:notice].present? ? "(#{flash[:notice]})" : '' %></strong> is associated with a Spouzz account you will receive an email from us with instructions to create a new password. If you haven't received this email, please check your junk folder or <%= link_to 'try again', forgot_password_path %>.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
