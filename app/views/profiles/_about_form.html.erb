<%= form_for(current_user.profile, url: profile_path, remote: true) do |f| %>
  <div class="alert alert-danger edit_errors" style="display:none">
  </div>
  <div class="alert alert-success edit_success" style="display:none">
    Updated. Go to your <%= link_to 'profile', user_path(current_user) %>
  </div>
  <div class="form-group">
    <%= f.label :about, 'Update your description', class: "sr-only" %>
    <%= f.text_area :about, { class: 'form-control', placeholder: 'How would your family describe you?', rows: 7} %>
  </div>
  <div class="form-group text-xs-right">
    <%= f.submit 'Update', { data: { disable_with: 'Updating' }, class: 'btn btn-success' } %>
  </div>
<% end %>
