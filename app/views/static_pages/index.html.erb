<% provide(:title, 'Free Matrimony - Unlimited Messages and Interests') %>

<section class="bg-primary py-3">
  <div class="container">
    <div class="row row align-items-center justify-content-between">
      <div class="col-12 col-md-6 col-lg-5 text-white">
        <p class="text-left">
          <%= image_tag 'logo-white.svg', height: 125 %>
        </p>
        <h1>Spouzz lets you find your partner for free.</h1>
        <p class="lead text-light">
          Never pay to contact members again. Send and receive <strong class="text-white border-bottom border-white">unlimited</strong> interests and messages for <strong class="text-white border-bottom border-white">free</strong>. Signing up takes only a minute.
        </p>
      </div>
      <div class="col-12 col-md-6 col-lg-5">
        <p class="text-right my-sm-4 my-md-3">
          <span class="text-light mr-2">Have an account?</span> <%= link_to 'Log in', login_path, class: 'btn btn-outline-light btn-sm' %>
        </p>

        <div class="card">
          <div class="card-body">
            <p class="h5 text-center mb-3 text-muted">Join Now</p>
            <%= render partial: 'users/signup_form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
