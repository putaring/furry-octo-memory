<% provide(:title, 'Meet your partner now') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 m-b-2 m-t-1 text-xs-center">
      <h1 class="brand text-primary">Roozam</h1>
    </div>
    <div class="col-xs-12 col-lg-7 text-xs-center">
      <h2>Meet your partner now.</h2>
        <p class="lead">
          Signing up takes a minute and is totally free<sup class="text-danger">&#9829;</sup>
        </p>
        <div class="m-t-2 m-b-2">
          <p class="hidden-lg-up">
            <%= link_to('Sign up for free', signup_path, class: 'btn btn-outline-primary') %>
          </p>
          <p class="hidden-lg-up">
            or <%= link_to('sign in', login_path, data: { toggle: 'modal', target: '#login-modal' }) %>
          </p>
        </div>
        <p>
          <%= image_tag('watermarked.png', class: 'img-fluid m-x-auto', id: 'landing-illustration') %>
        </p>
    </div>
    <div class="hidden-md-down offset-lg-1 col-lg-4">
      <%= render partial: 'users/signup_form' %>
      <hr />
      <p class="text-xs-center">
        Have an account? <%= link_to('Log in', login_path, data: { toggle: 'modal', target: '#login-modal' }) %>
      </p>
    </div>
  </div>
</div>
