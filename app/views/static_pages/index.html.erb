<% provide(:title, 'Free Matrimonial Site for Indians') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 m-b-2 m-t-1 text-xs-center">
      <p class="h2 text-muted"><%= image_tag 'logo.svg', width: 50, title: 'Roozam logo' %> Roozam</p>
    </div>
    <div class="col-xs-12 col-lg-7 text-xs-center">
      <h1 class="h2">Matrimony made simple and free.</h1>
        <p class="lead">
          Join now to find your partner. Signing up takes only a minute.
        </p>
        <div class="m-t-2 m-b-2">
          <p class="hidden-lg-up">
            <%= link_to('Sign up for free', signup_path, class: 'btn btn-outline-primary') %>
          </p>
          <p class="hidden-lg-up">
            or <%= link_to('sign in', login_path, data: { toggle: 'modal', target: '#login-modal' }) %>
          </p>
        </div>
        <p>
          <%= image_tag('watermarked.png', class: 'img-fluid m-x-auto', id: 'landing-illustration') %>
        </p>
    </div>
    <div class="hidden-md-down offset-lg-1 col-lg-4">
      <%= render partial: 'users/signup_form' %>
      <p class="text-xs-center">
        Have an account? <%= link_to('Log in', login_path, data: { toggle: 'modal', target: '#login-modal' }) %>
      </p>
    </div>
  </div>
</div>


<div class="jumbotron jumbotron-fluid text-xs-center m-t-3" style="background-color:#f6fbff;">


  <div class="container">
    <div class="row">

      <div class="col-md-4">
        <div class="card card-outline-secondary card-no-border">
          <%= image_tag('like.svg', class: 'card-img-top', alt: 'Like', style: 'max-width:100px;') %>
          <div class="card-block">
            <p class="card-text text-xs-center lead">Like people you're interested in. We'll let you know when they like you back.</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-outline-secondary card-no-border">
          <%= image_tag('message.svg', class: 'card-img-top', alt: 'Send a message', style: 'max-width:100px;') %>
          <div class="card-block">
            <p class="card-text text-xs-center lead">Send a message to start a conversation. It's free.</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card card-outline-secondary card-no-border">
          <%= image_tag('hitched.svg', class: 'card-img-top', alt: 'Get married', style: 'max-width:100px;') %>
          <div class="card-block">
            <p class="card-text text-xs-center lead">Find your perfect match. Get hitched. It's that simple!</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
