<div class="card card-block card-no-border" style="border-bottom: 1px solid #eee; border-radius:0">
  <p class="card-title font-weight-bold">Change password</p>
  <div class="row">
    <div class="col-lg-10">
      <%= form_for(current_user, url: me_path, remote: true, data: { user_id: current_user.id }) do |f| %>
        <div class="alert alert-danger edit_errors" style="display:none">
        </div>
        <div class="alert alert-success edit_success" style="display:none">
          Updated. Go to your <%= link_to 'profile', user_path(current_user) %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'New password' %>
          <%= f.password_field :password, { class: 'form-control', required: true, placeholder: 'Enter new password'} %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm password' %>
          <%= f.password_field :password_confirmation, { class: 'form-control', required: true, placeholder: 'Re-enter new password'} %>
        </div>
        <div class="form-group text-right">
          <%= f.submit 'Update', { data: { disable_with: 'Updatingâ€¦' }, class: 'btn btn-success' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
