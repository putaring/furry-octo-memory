<div class="row">
  <div class="col">
      <%= form_for(current_user, url: me_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'Email address' %>
          <%= f.email_field :email, { class: 'form-control', required: true, placeholder: 'Your current email address'} %>
          <small class="form-text text-muted d-block">You'll use this to log in.</small>
        </div>
        <div class="form-group">
          <%= f.submit 'Update', { data: { disable_with: 'Updatingâ€¦' }, class: 'btn btn-sm btn-secondary' } %>
        </div>
      <% end %>
  </div>
</div>
