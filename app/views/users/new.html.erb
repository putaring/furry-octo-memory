<% provide(:title, 'Join Now') %>
<section class="container">
  <div class="row">
    <div class="col col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 mt-2">
      <%= link_to root_path, class: 'd-block text-center' do %>
        <%= image_tag 'logo.svg', width: 48 %>
      <% end %>
      <h1 class="h2 text-center my-3">Let's get started</h1>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= render partial: 'signup_form' %>
      <div class="card text-center mb-5">
        <div class="card-body">
          Already have an account? <%= link_to('Log in', login_path, data: { toggle: 'modal', target: '#login-modal' }) %>
        </div>
      </div>
    </div>
  </div>
</section>
