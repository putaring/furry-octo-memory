<% if @user.occupation.present? %>

  <h2 class="h3 mb-3">What I'm doing with my life</h2>
  <%= simple_format(@user.occupation, { class: 'essay mb-5' }) %>

<% else %>
  <% if @user.eql?(current_user) %>
    <div class="rounded text-muted mb-5" style="border: 2px dashed #ccc">
      <h2 class="h3 mt-3 ml-3">What I'm doing with my life</h2>
      <p class="text-center essay text-muted p-5">
        This essay is empty.<br>
        <%= link_to "What do you do day-to-day?", essays_profile_path, data: { toggle: 'modal', target: '#occupation-modal' } %>
      </p>
    </div>
    <%= render partial: 'users/occupation_modal' %>
  <% end %>
<% end %>
