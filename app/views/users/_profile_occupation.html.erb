<% if @user.occupation.present? %>

  <h2 class="h4 mb-3">What I'm doing with my life</h2>
  <%= simple_format(@user.occupation, { class: 'essay mb-5' }) %>

<% else %>

    <div class="rounded text-muted mb-5" style="border: 2px dashed #ccc">
      <h2 class="h4 mt-3 ml-3">What I'm doing with my life</h2>
      <p class="text-center text-muted p-5">
        <% if is_me?(@user) %>
          You haven't written anything.<br>
          <%= link_to "What do you do day-to-day?", edit_profile_path, data: { toggle: 'modal', target: '#occupation-modal' } %>
          <%= render partial: 'users/occupation_modal' %>
        <% else %>
          <%= @user.male? ? 'He' : 'She' %> hasn't written anything.<br>
          <% if logged_in? %>
            <%= link_to "Send a message", '', data: { toggle: 'modal', target: '#message-modal' } %> to find out.
          <% end %>
        <% end %>
      </p>

    </div>
<% end %>
