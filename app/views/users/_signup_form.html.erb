<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.label :gender, "What's your gender?" %>
    <%= f.select :gender, [["I'm a man looking for a woman", 'm'], ["I'm a woman looking for a man", 'f']], {prompt: 'I am…'}, { class: 'form-control form-control', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, 'Birthday' %>
    <%= f.date_field :birthdate, class: 'form-control form-control', max: 18.years.ago, min: 100.years.ago, required: true %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :religion %>
    <%= f.select :religion,  User.religions.map{ |religion, value| [religion.humanize, value] }, { prompt: '—' }, { class: 'form-control form-control', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :language, 'Mother tongue' %>
    <%= f.select :language, LanguageList::COMMON_LANGUAGES.map { |l| [l.common_name || l.name, l.iso_639_3] }, { prompt: '—' } , { class: 'form-control form-control', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :country, 'Location' %>
    <%= f.country_select :country, {prompt: 'I live in…' } , { class: 'form-control form-control', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Your current email address' %>
    <%= f.email_field :email , { class: 'form-control form-control', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Create a password' %>
    <%= f.password_field :password , { class: 'form-control form-control', pattern: ".{8,}", placeholder:'Needs to be at least 8 characters', title: 'Password needs to be at least 8 characters', required: true } %>
    <small class="text-danger"></small>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">Sign up for free</button>
  </div>
<% end %>
