<%= form_for @user do |f| %>
  <%= render partial: 'users/profile_details', locals: { f: f, show_label: false } %>
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email , { class: 'form-control', required: true, placeholder: "Your current email address" } %>
    <small class="text-danger form-text"></small>
    <small class="form-text text-muted">You'll need this to log in and get notifications.</small>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, { class: 'form-control', pattern: ".{6,}", placeholder:'Create a password', title: 'Password needs to be at least 6 characters', required: true } %>
    <small class="text-danger form-text"></small>
    <small class="form-text text-muted">Needs to be atleast 6 characters.</small>
  </div>

  <div class="card card-block card-outline-secondary mb-3 py-3">
    <small>By signing up, you agree to our
      <%= link_to 'Terms of Use', terms_path, target: '_blank' %> and <%= link_to 'Privacy policy', privacy_path, target: '_blank' %>.
    </small>
  </div>

  <div class="form-group">
    <%= f.submit "Create my account", { data: { disable_with: 'Creating your accountâ€¦' }, class: 'btn btn-primary btn-block' } %>
    <small class="form-text text-muted d-block text-center">* You will be asked to verify your mobile number in the next step</small>
  </div>
<% end %>
