<%= form_for @user, html: { class: 'm-t-1' } do |f| %>
  <%= render partial: 'users/profile_details', locals: { f: f, show_label: false } %>
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email , { class: 'form-control', required: true, placeholder: "Your current email address" } %>
    <small class="text-danger"></small>
    <small class="form-text text-muted d-block">You'll need this to log in and get notifications.</small>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password , { class: 'form-control', pattern: ".{6,}", placeholder:'Create a password', title: 'Password needs to be at least 8 characters', required: true } %>
    <small class="text-danger"></small>
    <small class="form-text text-muted d-block">Needs to be atleast 6 characters.</small>
  </div>
  <div class="form-group">
    <%= f.submit 'Join now', { data: { disable_with: 'Creating your profileâ€¦' }, class: 'btn btn-primary btn-block' } %>
    <p class="text-xs-center text-muted">
      <small>By signing up, you agree to our
        <%= link_to 'Terms', terms_path, target: '_blank' %> and <%= link_to 'Privacy policy', privacy_path, target: '_blank' %>.
      </small>
    </p>
  </div>
<% end %>
