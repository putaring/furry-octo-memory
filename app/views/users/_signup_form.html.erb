<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.label :gender, "What's your gender?" %>
    <%= f.select :gender, [["I'm a boy looking for a girl", 'm'], ["I'm a girl looking for a boy", 'f']], {prompt: 'I am…'}, { class: 'form-control form-control-sm c-select', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, 'Birthday' %>
    <%= f.date_field :birthdate, class: 'form-control form-control-sm', max: 18.years.ago, min: 100.years.ago, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :religion %>
    <%= f.select :religion,  User.religions.map{ |religion, value| [religion.humanize, value] }, { prompt: '—' }, { class: 'form-control form-control-sm c-select', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :language, 'Mother tongue' %>
    <%= f.select :language, LanguageList::COMMON_LANGUAGES.map { |l| [l.common_name || l.name, l.iso_639_3] }, { prompt: '—' } , { class: 'form-control form-control-sm c-select', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :country, 'Location' %>
    <%= f.country_select :country, {prompt: 'I live in…' } , { class: 'form-control form-control-sm c-select', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Your current email address' %>
    <%= f.email_field :email , { class: 'form-control form-control-sm', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Create a password' %>
    <%= f.password_field :email , { class: 'form-control form-control-sm', pattern: ".{8,}", placeholder:'Needs to be at least 8 characters', title: 'Password needs to be at least 8 characters', required: true } %>
  </div>
  <button type="submit" class="btn btn-primary btn-raised btn-block">Sign up for free</button>
<% end %>
