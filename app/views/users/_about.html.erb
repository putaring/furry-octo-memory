<% if @user.profile.about.present? %>
  <div class="card mb-4 border-light">
    <div class="card-body bg-light">
      <h5 class="card-title">A few words about me</h5>
      <div class="card-text">
        <%= simple_format(@user.profile.about) %>
        <% if @user.eql?(current_user) %>
          <%= link_to edit_description_path, class: 'btn btn-sm btn-outline-success' do %>
              <i class="icon ion-edit"></i> Edit
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="card text-muted bg-light mb-4" style="border-style: dashed;">
    <h5 class="card-header border-0 bg-light">A few words about me</h5>
    <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 13rem">
      <p class="card-text text-center">
        <% if @user.eql?(current_user) %>
          <i class="icon ion-clipboard h3"></i><br>
          <%= link_to "How would your family describe you?", edit_description_path %>
        <% else %>
          <%= @user.male? ? 'He' : 'She' %> hasn't written anything yet.<br>
          Perhaps a thinker, not a talker.
        <% end %>
      </p>
    </div>
  </div>
<% end %>
