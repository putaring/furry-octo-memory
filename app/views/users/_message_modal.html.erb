<div class="modal fade" id="message-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="alert alert-danger" id="message-modal-error" role="alert" style="display:none">
        </div>

        <%= form_for([@user, Message.new], { remote: true }) do |f| %>
          <div class="form-group">
            <%= f.label :body, 'Compose a message', { class: 'col-form-label col-form-label-lg' } %>
            <%= f.text_area :body, { rows: 7, maxlength: 1000, class: 'form-control form-control-lg', placeholder: 'Say something nice', required: true } %>
          </div>
          <div class="form-group text-xs-right">
            <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary btn-lg" data-disable-with="Sendingâ€¦" ><i class="fa fa-paper-plane-o"></i> Send</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
