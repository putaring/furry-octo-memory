<div class="modal fade" id="message-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="alert alert-danger" id="message-modal-error" role="alert" style="display:none">
        </div>

        <%= form_for([@user, Message.new], { remote: true }) do |f| %>
          <div class="form-group">
            <%= f.label :body, 'Send a quick message', { class: 'col-form-label' } %>
            <%= f.text_area :body, { rows: 7, maxlength: 1000, class: 'form-control', placeholder: 'Say hello', required: true } %>
          </div>
          <div class="form-group text-right">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" data-disable-with="Sending" >Send</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
