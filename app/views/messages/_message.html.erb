<%
  conversation  = message.conversation
  recipient     = conversation.other_participant(current_user)
%>
<%= link_to conversation, class: "list-group-item list-group-item-action" do %>
  <div class="media align-items-center">
    <%= image_tag display_picture_for(recipient), { class: 'rounded-circle img-fluid align-self-center mr-3', style: "width: 4rem;" } %>
    <div class="media-body">
      <div class="d-flex justify-content-between align-items-center">
          <h6 class="mb-0"><%= recipient.username %></h6>
          <div>
            <small class="text-muted"><%= time_ago_in_words(message.created_at) %> ago</small>
          </div>
        </div>
        <span class="d-block text-muted"><%= message.body %></span>
      </div>
    </div>
<% end %>
