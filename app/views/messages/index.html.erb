<% provide(:title, 'Inbox') %>
<%= render partial: 'shared/main_nav' %>

<div class="jumbotron jumbotron-fluid text-center m-b-0 bg-primary">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="jumbotron-heading">Inbox</h1>
      </div>
    </div>
  </div>
</div>
<div style="border-bottom: 1px solid #f3f3f3;">
  <div class="container py-1">
    <div class="row">
      <div class="col">
        <%= render partial: 'messages/messages_nav' %>
      </div>
    </div>
  </div>
</div>

<section class="container mt-2">
  <div class="row">
    <% if @messages.empty? %>
      <div class="col">
        <div class="card card-block card-outline-secondary text-muted p-y-3" style="border-style:dashed">
          <p class="text-center py-3">
            0 messages<br>
            <small>Be the first to start a conversation.</small><br>
            <%= link_to 'Browse matches', search_path, class: "btn btn-success m-t-1" %>
          </p>
        </div>
      </div>
    <% else %>
      <div class="col-lg-7">
        <% @messages.each do |message| %>
          <%= render partial: 'messages/message_card', locals: { message: message, user: message.sender } %>
        <% end %>
      </div>
      <div class="col-lg-5">
      </div>
    <% end %>
  </div>
</section>
