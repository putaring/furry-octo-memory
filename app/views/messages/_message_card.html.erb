<%=link_to conversation_path(message.conversation_id), { class: 'message-card' } do %>
  <div class="media p-4 mb-3">
    <div>
      <%= image_tag(user.display_picture_for(current_user), { class: 'rounded-circle mr-3', width: 80 })%>
    </div>
    <div class="media-body">
      <p class="media-heading username h5"><%= user.username %></p>
      <span class="message-body">
        <%= truncate message.body %>
      </span><br>
      <small class="text-muted"><%= time_ago_in_words(message.created_at) %> ago</small>
      <% unless message.read? %>
        <span class="badge badge-info">unread</span>
      <% end %>
    </div>
  </div>
<% end %>
