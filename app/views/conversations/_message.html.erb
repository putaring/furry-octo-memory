<%= content_tag :div, class: 'media mb-3', style: hidden ? 'display:none' : '' do %>
  <div>
    <%= link_to user_path(sender) do %>
      <%= image_tag(sender.display_picture_for(current_user), { class: 'mr-3 rounded-circle', width: 70 })%>
    <% end %>
  </div>
  <div class="media-body p-3" style="background-color:<%= sender.eql?(current_user) ? '#E8F5E9' : '#E1F5FE' %>;color:#5e6573">
    <%= simple_format message.body, class: 'message-body' %>
    <small class="text-muted">Sent <%= time_ago_in_words(message.created_at) %> ago</small>
  </div>
<% end %>
