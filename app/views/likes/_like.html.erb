<li class="list-group-item">
  <div class="media align-items-center">
    <%= link_to like.liked do %>
      <%= image_tag display_picture_for(like.liked), { class: 'rounded-circle img-fluid align-self-center mr-3', style: "width: 4rem;" } %>
    <% end %>
    <div class="media-body">
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0">
          <%= like.liked.username %><br>
          <small class="text-muted"><%= time_ago_in_words(like.created_at) %> ago</small>
        </p>
        <div>
          <p class="mb-0">
            <%= link_to 'Unlike', '#', class: 'btn btn-sm btn-outline-secondary' %>
          </p>

        </div>
      </div>
    </div>
  </div>
</li>
