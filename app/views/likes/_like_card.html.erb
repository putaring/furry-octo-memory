<div class="media p-a-1 m-b-1 like-card" style="border-bottom:1px solid #f3f3f3;">
  <%= link_to user_path(user), { class: 'media-left', style: "text-decoration:none;" } do %>
    <%= image_tag(user.display_picture_for(current_user, :small_thumb), { class: 'img-circle', width: 70 }) %>
  <% end %>
  <div class="media-body">
    <%= link_to user.username, user_path(user), { class: 'media-heading username' } %><br>
    <div><small class="text-muted"><%= time_ago_in_words(time) %> ago</small></div>
  </div>
</div>
