<div class="card mb-2">
  <div class="card-body">
    <div class="media">
      <%= link_to user_path(user), { style: "text-decoration:none;", class: 'mb-2' } do %>
        <%= image_tag(display_picture_for(user), { class: 'rounded-circle d-flex mr-3', width: 120 }) %>
      <% end %>
      <div class="media-body align-self-center">
        <%= link_to user.username, user_path(user), { class: 'h5' } %><br>
        <div><small class="text-muted"><%= time_ago_in_words(time) %> ago</small></div>
      </div>
    </div>
  </div>
</div>
