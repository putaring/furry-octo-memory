<% provide(:title, 'Mutual likes') %>
<%= render partial: 'shared/main_nav' %>

<div class="jumbotron jumbotron-fluid mb-0 bg-primary" style="color:#fff">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="jumbotron-heading">You like each other</h1>
      </div>
    </div>
  </div>
</div>
<div class="mb-3" style="border-bottom: 1px solid #f3f3f3;">
  <div class="container py-3">
    <div class="row">
      <div class="col-12">
        <%= render partial: 'likes/like_nav' %>
      </div>
    </div>
  </div>
</div>

<section class="container">
  <div class="row justify-content-center">
    <% if @mutual_interests.empty? %>
    <div class="col-lg-7">
      <div class="rounded p-5 text-center text-muted" style="border: 2px dashed #ccc">
        <p class="m-5">
          Browse matches to find someone you like. <br />
          <%= link_to 'Browse matches', search_path, class: "btn btn-success mt-1" %>
        </p>
      </div>
    </div>
    <% else %>
      <div class="col-lg-7">
        <% @mutual_interests.each do |interest| %>
          <%= render partial: 'likes/match_card', locals: { time: interest.matched_at, user: interest.liked } %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
