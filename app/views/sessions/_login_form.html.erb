<%= form_for(:session, url: login_path, html: { remote: remote, id: 'login-form' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, { class: 'form-control', placeholder: 'Email', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, { class: 'form-control', placeholder: 'Password', required: true } %>
    <small class="form-text">Forgot password? <%= link_to "Reset here", forgot_password_path %></small>
  </div>
  <div class="form-group text-center mt-3">
    <%= f.submit 'Login', { data: { disable_with: 'Logging inâ€¦' }, class: 'btn btn-primary' } %>
  </div>
<% end %>
