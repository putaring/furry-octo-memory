<%= form_for(:session, url: login_path, html: { remote: remote, id: 'login-form' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, { class: 'form-control', placeholder: 'Email', required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, { class: 'form-control', placeholder: 'Password', required: true } %>
    <p class="form-text text-right"><%= link_to "Forgot password?", forgot_password_path %></p>
  </div>
  <div class="form-group">
    <%= f.submit 'Login', { data: { disable_with: 'Logging inâ€¦' }, class: 'btn btn-primary btn-block' } %>
  </div>
<% end %>
