<% provide(:title, 'Log in to Spouzz') %>
<section class="container mb-5">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 mt-2">
      <%= link_to root_path, class: 'd-block text-center' do %>
        <%= image_tag 'logo.svg', width: 48 %>
      <% end %>
      <h1 class="h2 text-center my-3">Log in to Spouzz</h1>
      <% if flash.present? %>
      <div class="alert alert-danger" role="alert">
        <%= flash.now[:error] %>
      </div>
      <% end %>
      <%= render partial: 'sessions/login_form', locals: { remote: false } %>
      <div class="text-center card">
        <div class="card-body">
          Don't have an account? <%= link_to('Signup', signup_path) %>
        </div>
      </div>
    </div>
  </div>
</section>
