<% provide(:title, 'Log in to Roozam') %>
<section class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 m-t-2">
      <%= link_to root_path, class: 'd-block text-xs-center' do %>
        <%= image_tag 'logo.svg', width: 48 %>
      <% end %>
      <h1 class="h2 text-xs-center m-y-1">Log in to Roozam</h1>
      <% if flash.present? %>
      <div class="alert alert-danger" role="alert">
        <%= flash.now[:error] %>
      </div>
      <% end %>
      <%= render partial: 'sessions/login_form', locals: { remote: false } %>
      <hr>
      <div class="text-xs-center">
          Don't have an account? <%= link_to('Signup', signup_path) %>
      </div>
    </div>
  </div>
</section>
