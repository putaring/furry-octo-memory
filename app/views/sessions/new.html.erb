<% provide(:title, 'Login') %>
<section class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      <div class="card card-block m-t-2">
        <h1 class="text-xs-center h2 brand"><%= link_to "Roozam", root_path %></h1>
        <% if flash.present? %>
        <div class="alert alert-danger" role="alert">
          <%= flash.now[:error] %>
        </div>
        <% end %>
        <%= form_for(:session, url: login_path, html: { class: 'm-t-1' }) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'sr-only' %>
            <%= f.email_field :email, { class: 'form-control', placeholder: 'Email', required: true } %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'sr-only' %>
            <%= f.password_field :password, { class: 'form-control', placeholder: 'Password', required: true } %>
          </div>
          <div class="form-group">
            <%= f.submit "Login", class: "btn btn-large btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="card card-block text-xs-center">
          Don't have an account? <%= link_to('Signup', signup_path) %>
      </div>
    </div>
  </div>
</section>
