<% provide(:title, 'Login') %>
<section class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 m-t-2">
      <h1 class="text-xs-center h2 brand m-b-1"><%= link_to "Roozam", root_path %></h1>
      <% if flash.present? %>
      <div class="alert alert-danger" role="alert">
        <%= flash.now[:error] %>
      </div>
      <% end %>
      <%= render partial: 'sessions/login_form', locals: { remote: false } %>
      <hr>
      <div class="text-xs-center">
          Don't have an account? <%= link_to('Signup', signup_path) %>
      </div>
    </div>
  </div>
</section>
