<section class="container">
  <% if flash[:notice].present? %>
  <div class="row justify-content-center">
    <div class="col-md-7">
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row justify-content-center">

    <div class="col-md-10">
      <ul class="nav nav-tabs nav-fill" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#details" role="tab">Details</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#essays" role="tab">Essays</a>
        </li>
      </ul>



      <div class="tab-content">
        <div class="tab-pane active" id="details" role="tabpanel">
          <%= render partial: "admin/users/info/details" %>
        </div>
        <div class="tab-pane" id="essays" role="tabpanel">
          <%= render partial: "admin/users/info/essays" %>
        </div>
      </div>
    </div>
  </div>
</section>
