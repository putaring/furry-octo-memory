<% provide(:title, 'My favorites') %>
<%= render partial: 'shared/main_nav' %>

<div class="jumbotron jumbotron-fluid text-center m-b-0 bg-primary">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="thin">Favorites</h1>
      </div>
    </div>
  </div>
</div>


<section class="container m-t-2">
  <div class="row">
    <% if @active_bookmarks.empty? %>
    <div class="col-12">
      <div class="card card-block card-outline-secondary text-muted p-y-3" style="border-style:dashed">
        <p class="text-center p-y-3">
          <span class="lead">You haven't favorited anybody.</span><br>
          Favorites is a place to to easily access profiles that you want to view later. We will <strong>not</strong> notify a user when you add them to your favorites.<br />
            <%= link_to 'Browse matches', search_path, class: "btn btn-success m-t-1" %>
        </p>
      </div>
    </div>
    <% else %>
      <div class="col-lg-7">
        <% @active_bookmarks.each do |bookmark| %>
          <%= render partial: 'favorites/favorite_card', locals: { time: bookmark.created_at, user: bookmark.bookmarked } %>
        <% end %>
      </div>
      <div class="col-lg-5">
      </div>
    <% end %>
  </div>
</section>
