<li class="list-group-item">
  <div class="media align-items-center">
    <%= link_to passive_interest.liker do %>
      <%= image_tag display_picture_for(passive_interest.liker, current_user), { class: 'rounded-circle img-fluid align-self-center mr-3', style: "width: 4rem;" } %>
    <% end %>
    <div class="media-body">
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0">
          <%= passive_interest.liker.username %><br>
          <small class="text-muted"><%= time_ago_in_words(passive_interest.created_at) %> ago</small>
        </p>
        <div>
          <p class="mb-0">
            <% if current_user.likes?(passive_interest.liker) %>
              <small class="text-success"><i class="icon ion-checkmark"></i> Accepted</small>
            <% else %>
              <%= link_to('Accept', accept_interest_path(passive_interest), remote: true, method: :post, class: 'btn btn-pink btn-sm icon ion-checkmark', data: { toggle: :accept } ) %>
            <% end %>
            <%= link_to(decline_interest_path(passive_interest), remote: true, method: :delete, class: 'btn btn-outline-secondary btn-sm', data: { toggle: :decline } ) do %>
              Decline
            <% end %>
          </p>

        </div>
      </div>
    </div>
  </div>
</li>
